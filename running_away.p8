function _init()
 x=63
 y=63
 w=8
 h=6	
 dx=1
 spx=1
 btime=0
 ax=rnd(127)
 ay=rnd(127)
 adx=1
 ady=1
 aw=8
 ah=8
end

function _update()
 move_player()
 move_asteroid()
end

function _draw()
 cls()
 draw_stars()
 draw_player()
 spr(4,ax,ay)
end
